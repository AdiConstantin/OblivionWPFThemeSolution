<Window x:Class="OblivionThemeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oblivion Dashboard"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{DynamicResource BackgroundBrush}">
    <DockPanel>
        <!-- Navigation Sidebar -->
        <StackPanel DockPanel.Dock="Left"
                    Width="200"
                    Background="{DynamicResource SurfaceBrush}">
            <TextBlock Text="NAVIGATION"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="10"
                       Foreground="{DynamicResource PrimaryBrush}" />
            <Button Content="Dashboard"
                    Margin="10 5" />
            <Button Content="Reports"
                    Margin="10 5" />
            <Button Content="Settings"
                    Margin="10 5" />

            <StackPanel VerticalAlignment="Bottom"
                        Margin="10,20,10,10">
                <TextBlock Text="Support the Project"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           Margin="0,0,0,8" />
                <StackPanel>
                    <Button Content="☕ Buy Me a Coffee"
                            Tag="https://coff.ee/constantinadi"
                            Click="PaymentButton_Click"
                            Margin="0,2" />
                    <Button Content="💖 Symbolic Donation"
                            Tag="https://www.paypal.com/donate/?hosted_button_id=YOUR_SYMBOLIC_ID"
                            Click="PaymentButton_Click"
                            Margin="0,2"
                            IsEnabled="False"
                            ToolTipService.ShowOnDisabled="True">
                        <Button.ToolTip>
                            <StackPanel>
                                <TextBlock Text="Symbolic Donation - Not yet Implemented"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryBrush}" />
                                <TextBlock Text="Support the project with a symbolic donation is deferred because there are some issues with PayPal account. Thank you for understanding!"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextBrush}" />
                            </StackPanel>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="💳 Standard Donation"
                            Tag="https://www.paypal.com/donate/?hosted_button_id=YOUR_STANDARD_ID"
                            Click="PaymentButton_Click"
                            Margin="0,2"
                            IsEnabled="False"
                            ToolTipService.ShowOnDisabled="True">
                        <Button.ToolTip>
                            <StackPanel>
                                <TextBlock Text="Standard Donation - Not yet Implemented"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryBrush}" />
                                <TextBlock Text="Support the project with a standard donation is deferred because there are some issues with PayPal account. Thank you for understanding!"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextBrush}" />
                            </StackPanel>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="🚀 Serious Supporter"
                            Tag="https://www.paypal.com/donate/?hosted_button_id=YOUR_SERIOUS_ID"
                            Click="PaymentButton_Click"
                            Margin="0,2"
                            IsEnabled="False"
                            ToolTipService.ShowOnDisabled="True">
                        <Button.ToolTip>
                            <StackPanel>
                                <TextBlock Text="Serious Donation - Not yet Implemented"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryBrush}" />
                                <TextBlock Text="Support the project with a serious donation is deferred because there are some issues with PayPal account. Thank you for understanding!"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextBrush}" />
                            </StackPanel>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Top Header -->
        <DockPanel DockPanel.Dock="Top"
                   Height="50"
                   Background="{StaticResource SurfaceBrush}">
            <TextBlock Text="Oblivion Control Center"
                       FontSize="16"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10"
                       Foreground="{StaticResource PrimaryBrush}" />
        </DockPanel>

        <!-- Copyright Footer -->
        <Border DockPanel.Dock="Bottom"
                Background="{DynamicResource SurfaceBrush}"
                Padding="8,4"
                BorderThickness="1,0,0,0"
                BorderBrush="{DynamicResource PrimaryBrush}">
            <TextBlock Foreground="{DynamicResource TextBrush}"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       TextAlignment="Center">
                © 2025 Adi Constantin  |
                <Hyperlink NavigateUri="adrianconstantin.ro"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    Website
                </Hyperlink>  |  
                <Hyperlink NavigateUri="https://linkedin.com/in/constantinadi"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    LinkedIn
                </Hyperlink>  |  
                <Hyperlink NavigateUri="https://github.com/AdiConstantin/OblivionWPFTheme"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    GitHub project
                </Hyperlink>
            </TextBlock>
        </Border>

        <!-- Main Content Area -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Quick Actions Row -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0 0 0 20">
                <Button Content="+ New Task"
                        Width="120"
                        Height="30" />
                <Slider Width="200"
                        Minimum="0"
                        Maximum="100"
                        Margin="10 0" />
                <ProgressBar Width="150"
                             Height="20"
                             Value="70"
                             Margin="10 0" />
                <ProgressBar Width="150"
                             Height="20"
                             Value="70"
                             Margin="10 0"
                             IsIndeterminate="True" />
            </StackPanel>

            <!-- Dashboard Content -->
            <TabControl Grid.Row="1">
                <TabItem Header="Overview">
                    <ListBox>
                        <ListBoxItem Content="System Check: OK" />
                        <ListBoxItem Content="Module Status: Active" />
                        <ListBoxItem Content="Comms: Secure" />
                    </ListBox>
                </TabItem>
                <TabItem Header="Details">
                    <DataGrid AutoGenerateColumns="True"
                              Height="200" />
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>