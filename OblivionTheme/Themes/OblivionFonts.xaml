<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Font Families with Fallbacks -->
    <FontFamily x:Key="SciFiFont">pack://application:,,,/OblivionTheme;component/Fonts/Orbitron-Regular.ttf#Orbitron, Segoe UI, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="SciFiFontBold">pack://application:,,,/OblivionTheme;component/Fonts/Orbitron-Bold.ttf#Orbitron, Segoe UI Semibold, Arial Black, sans-serif</FontFamily>
    <FontFamily x:Key="SciFiFontLight">pack://application:,,,/OblivionTheme;component/Fonts/Orbitron-Light.ttf#Orbitron, Segoe UI Light, Arial, sans-serif</FontFamily>
    
    <!-- Fallback if custom fonts are not available -->
    <FontFamily x:Key="PrimaryFont">Segoe UI, Calibri, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="MonospaceFont">Consolas, Courier New, monospace</FontFamily>
    
    <!-- Font Sizes -->
    <sys:Double x:Key="SmallFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">11</sys:Double>
    <sys:Double x:Key="NormalFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
    <sys:Double x:Key="MediumFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
    <sys:Double x:Key="LargeFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
    <sys:Double x:Key="XLargeFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>
    <sys:Double x:Key="XXLargeFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">32</sys:Double>
    
    <!-- Text Styles with Effects -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource SciFiFontBold}" />
        <Setter Property="FontSize" Value="{DynamicResource LargeFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{DynamicResource GlowColor}" 
                                  BlurRadius="8" 
                                  ShadowDepth="0" 
                                  Opacity="0.6" />
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource SciFiFont}" />
        <Setter Property="FontSize" Value="{DynamicResource MediumFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>
    
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource SciFiFont}" />
        <Setter Property="FontSize" Value="{DynamicResource NormalFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="LineHeight" Value="22" />
    </Style>
    
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource SciFiFontLight}" />
        <Setter Property="FontSize" Value="{DynamicResource SmallFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource MediumTextBrush}" />
        <Setter Property="FontStyle" Value="Italic" />
    </Style>
    
    <Style x:Key="MonospaceTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource MonospaceFont}" />
        <Setter Property="FontSize" Value="{DynamicResource NormalFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
        <Setter Property="Padding" Value="8,4" />
    </Style>
    
    <!-- Glowing Text Effect for Special Elements -->
    <Style x:Key="GlowingTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource SciFiFontBold}" />
        <Setter Property="FontSize" Value="{DynamicResource LargeFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource HighlightBrush}" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{DynamicResource PrimaryColor}" 
                                  BlurRadius="15" 
                                  ShadowDepth="0" 
                                  Opacity="0.8" />
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>