<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Oblivion Blue/Cyan Colors -->
    <Color x:Key="PrimaryColor">#00D4FF</Color>
    <Color x:Key="PrimaryLightColor">#33DDFF</Color>
    <Color x:Key="PrimaryDarkColor">#0099CC</Color>
    
    <!-- Accent Orange Colors -->
    <Color x:Key="AccentColor">#FF6B35</Color>
    <Color x:Key="AccentLightColor">#FF8555</Color>
    <Color x:Key="AccentDarkColor">#CC4420</Color>
    
    <!-- Background Colors -->
    <Color x:Key="DarkBackground">#0A0E1A</Color>
    <Color x:Key="SurfaceDark">#1A2332</Color>
    <Color x:Key="SurfaceLight">#2D3748</Color>
    <Color x:Key="SurfaceHover">#3A4A5C</Color>
    
    <!-- Text Colors -->
    <Color x:Key="LightText">#E2E8F0</Color>
    <Color x:Key="MediumText">#A0AEC0</Color>
    <Color x:Key="DarkText">#4A5568</Color>
    
    <!-- Special Effect Colors -->
    <Color x:Key="GlowColor">#66D4FF</Color>
    <Color x:Key="HighlightColor">#FFFFFF</Color>
    <Color x:Key="SuccessColor">#00FF88</Color>
    <Color x:Key="WarningColor">#FFA500</Color>
    <Color x:Key="ErrorColor">#FF4444</Color>
    
    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{DynamicResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{DynamicResource PrimaryDarkColor}" />
    
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="AccentLightBrush" Color="{DynamicResource AccentLightColor}" />
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{DynamicResource AccentDarkColor}" />
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource DarkBackground}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{DynamicResource SurfaceDark}" />
    <SolidColorBrush x:Key="SurfaceLightBrush" Color="{DynamicResource SurfaceLight}" />
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{DynamicResource SurfaceHover}" />
    
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource LightText}" />
    <SolidColorBrush x:Key="MediumTextBrush" Color="{DynamicResource MediumText}" />
    <SolidColorBrush x:Key="DarkTextBrush" Color="{DynamicResource DarkText}" />
    
    <SolidColorBrush x:Key="GlowBrush" Color="{DynamicResource GlowColor}" />
    <SolidColorBrush x:Key="HighlightBrush" Color="{DynamicResource HighlightColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource WarningColor}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{DynamicResource ErrorColor}" />
    
    <!-- Gradient Brushes for Futuristic Effects -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource PrimaryLightColor}" Offset="0" />
        <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0.5" />
        <GradientStop Color="{DynamicResource PrimaryDarkColor}" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource AccentLightColor}" Offset="0" />
        <GradientStop Color="{DynamicResource AccentColor}" Offset="0.5" />
        <GradientStop Color="{DynamicResource AccentDarkColor}" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SurfaceGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource SurfaceLight}" Offset="0" />
        <GradientStop Color="{DynamicResource SurfaceDark}" Offset="1" />
    </LinearGradientBrush>
    
    <RadialGradientBrush x:Key="GlowRadialBrush" Center="0.5,0.5" RadiusX="1" RadiusY="1">
        <GradientStop Color="#3300D4FF" Offset="0" />
        <GradientStop Color="#1100D4FF" Offset="0.7" />
        <GradientStop Color="#0000D4FF" Offset="1" />
    </RadialGradientBrush>
    
    <!-- Semi-transparent brushes for overlays -->
    <SolidColorBrush x:Key="OverlayBrush" Color="#AA000000" />
    <SolidColorBrush x:Key="LightOverlayBrush" Color="#22FFFFFF" />
    
</ResourceDictionary>